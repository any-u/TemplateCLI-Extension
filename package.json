{
  "name": "template",
  "displayName": "Template",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "template.view.settings",
        "title": "设置",
        "category": "Template",
        "icon": {
          "light": "resources/light/settings.svg",
          "dark": "resources/dark/settings.svg"
        }
      },
      {
        "command": "template.view.showSettings",
        "title": "打开设置页",
        "category": "Template"
      },
      {
        "command": "template.view.insert",
        "title": "插入",
        "category": "Template"
      },
      {
        "command": "template.view.edit",
        "title": "编辑",
        "category": "Template"
      },
      {
        "command": "template.view.rename",
        "title": "重命名",
        "category": "Template"
      },
      {
        "command": "template.view.delete",
        "title": "删除",
        "category": "Template"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "template",
          "title": "Template",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "template": [
        {
          "id": "template.view:explorer",
          "name": "模板库"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "template.view.settings",
          "when": "view =~ /^template\\.view/",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "template.view.insert",
          "when": "view == template.view:explorer && viewItem == template:File",
          "group": "navigation@1"
        },
        {
          "command": "template.view.edit",
          "when": "view == template.view:explorer && viewItem == template:File",
          "group": "1_modification"
        },
        {
          "command": "template.view.rename",
          "when": "view == template.view:explorer && viewItem == template:Folder ||view == template.view:explorer && viewItem == template:File",
          "group": "1_modification"
        },
        {
          "command": "template.view.delete",
          "when": "view == template.view:explorer && viewItem == template:Folder || view == template.view:explorer && viewItem == template:File",
          "group": "9_cutcopypaste"
        }
      ]
    },
    "configuration": [
      {
        "title": "Template",
        "properties": {
          "template.workspaceFolder": {
            "type": "string",
            "scope": "application",
            "description": "The path of the workspace folder to store the template files.",
            "default": ""
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/request": "^2.48.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "mkdirp": "^0.5.1",
    "request": "^2.88.0"
  }
}
