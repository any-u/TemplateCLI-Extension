{
  "name": "template",
  "displayName": "Template",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:template.updateExplorer",
    "onCommand:template.refreshExplorer",
    "onCommand:template.downloadTemplate",
    "onCommand:template.insertTemplate",
    "onCommand:template.loadTemplate",
    "onView:templateExplorer",
    "onView:localTemplateExplorer",
    "onView:mineTemplateExplorer"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "template.updateExplorer",
        "title": "Update",
        "category": "Template",
        "icon": {
          "light": "resources/light/update.svg",
          "dark": "resources/dark/update.svg"
        }
      },
      {
        "command": "template.downloadTemplate",
        "title": "Download",
        "category": "Template",
        "icon": {
          "light": "resources/light/download.svg",
          "dark": "resources/dark/download.svg"
        }
      },
      {
        "command": "template.refreshExplorer",
        "title": "Refresh",
        "category": "Template",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "template.insertTemplate",
        "title": "Insert Template",
        "category": "Template"
      },
      {
        "command": "template.loadTemplate",
        "title": "Load Template",
        "category": "Template",
        "icon": {
          "light": "resources/light/load.svg",
          "dark": "resources/dark/load.svg"
        }
      },
      {
        "command": "template.editTemplate",
        "title": "Edit Template",
        "category": "Template",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "template.addFavorite",
        "title": "Add Favorite",
        "category": "Template",
        "icon": {
          "light": "resources/light/favorite.svg",
          "dark": "resources/dark/favorite.svg"
        }
      },
      {
        "command": "template.removeFavorite",
        "title": "Remove Favorite",
        "category": "Template",
        "icon": {
          "light": "resources/light/favorite.svg",
          "dark": "resources/dark/unfavorite.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "template",
          "title": "template",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "template": [
        {
          "id": "mineTemplateExplorer",
          "name": "Mine"
        },
        {
          "id": "localTemplateExplorer",
          "name": "Local"
        },
        {
          "id": "templateExplorer",
          "name": "Online"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "template.downloadTemplate",
          "when": "view == templateExplorer",
          "group": "navigation@1"
        },
        {
          "command": "template.updateExplorer",
          "when": "view == templateExplorer",
          "group": "navigation@2"
        },
        {
          "command": "template.refreshExplorer",
          "when": "view == templateExplorer || view == localTemplateExplorer || view == mineTemplateExplorer",
          "group": "navigation@3"
        },
        {
          "command": "template.loadTemplate",
          "when": "view == localTemplateExplorer",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "template.editTemplate",
          "when": "view == templateExplorer && viewItem == template || view == localTemplateExplorer && viewItem == template",
          "group": "inline"
        },
        {
          "command": "template.addFavorite",
          "when": "view == templateExplorer && viewItem == template || view == localTemplateExplorer && viewItem == template",
          "group": "inline"
        },
        {
          "command": "template.removeFavorite",
          "when": "view == mineTemplateExplorer",
          "group": "inline"
        }
      ]
    },
    "configuration": [{
      "title": "Template",
      "properties": {
        "template.workspaceFolder": {
          "type": "string",
          "scope": "application",
          "description": "The path of the workspace folder to store the template files.",
          "default": ""
        }
      }
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/request": "^2.48.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "mkdirp": "^0.5.1",
    "request": "^2.88.0"
  }
}
