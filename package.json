{
  "name": "template",
  "displayName": "Template",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:template.refreshExplorer",
    "onCommand:template.downloadTemplate",
    "onCommand:template.insertTemplate",
    "onCommand:template.addTemplate",
    "onCommand:template.insertLocalTemplate",
    "onView:templateExplorer",
    "onView:localTemplateExplorer"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "template.refreshExplorer",
        "title": "Refresh",
        "category": "Template",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "template.downloadTemplate",
        "title": "Download",
        "category": "Template",
        "icon": {
          "light": "resources/light/download.svg",
          "dark": "resources/dark/download.svg"
        }
      },
      {
        "command": "template.insertTemplate",
        "title": "Insert Template",
        "category": "Template"
      },
      {
        "command": "template.insertLocalTemplate",
        "title": "Insert Template",
        "category": "Template"
      },
      {
        "command": "template.addTemplate",
        "title": "Set",
        "category": "Template",
        "icon": {
          "light": "resources/light/set.svg",
          "dark": "resources/dark/set.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "template",
          "title": "template",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "template": [
        {
          "id": "localTemplateExplorer",
          "name": "Local"
        },
        {
          "id": "templateExplorer",
          "name": "Online"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "template.downloadTemplate",
          "when": "view == templateExplorer",
          "group": "navigation@2"
        },
        {
          "command": "template.refreshExplorer",
          "when": "view == templateExplorer",
          "group": "navigation@3"
        },
        {
          "command": "template.addTemplate",
          "when": "view == localTemplateExplorer",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/request": "^2.48.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "mkdirp": "^0.5.1",
    "request": "^2.88.0"
  }
}
