{
  "name": "template",
  "displayName": "Template",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "template.views.online.update",
        "title": "Update",
        "category": "Template",
        "icon": {
          "light": "resources/light/update.svg",
          "dark": "resources/dark/update.svg"
        }
      },
      {
        "command": "template.views.online.download",
        "title": "Download",
        "category": "Template",
        "icon": {
          "light": "resources/light/download.svg",
          "dark": "resources/dark/download.svg"
        }
      },
      {
        "command": "template.views.online.refresh",
        "title": "Refresh",
        "category": "Template",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "template.views.local.refresh",
        "title": "Refresh",
        "category": "Template",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "template.views.local.load",
        "title": "Load Template",
        "category": "Template",
        "icon": {
          "light": "resources/light/load.svg",
          "dark": "resources/dark/load.svg"
        }
      },
      {
        "command": "template.views.insert",
        "title": "Insert Template",
        "category": "Template"
      },
      {
        "command": "template.editTemplate",
        "title": "Edit Template",
        "category": "Template",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "template.addFavorite",
        "title": "Add Favorite",
        "category": "Template",
        "icon": {
          "light": "resources/light/favorite.svg",
          "dark": "resources/dark/favorite.svg"
        }
      },
      {
        "command": "template.removeFavorite",
        "title": "Remove Favorite",
        "category": "Template",
        "icon": {
          "light": "resources/light/favorite.svg",
          "dark": "resources/dark/unfavorite.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "template",
          "title": "Template",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "template": [
        {
          "id": "template.views.min:explorer",
          "name": "Mine"
        },
        {
          "id": "template.views.local:explorer",
          "name": "Local"
        },
        {
          "id": "template.views.online:explorer",
          "name": "Online"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "template.views.online.download",
          "when": "view =~ /^template\\.views\\.online:/",
          "group": "navigation@1"
        },
        {
          "command": "template.views.online.update",
          "when": "view =~ /^template\\.views\\.online:/",
          "group": "navigation@2"
        },
        {
          "command": "template.views.online.refresh",
          "when": "view =~ /^template\\.views\\.online:/",
          "group": "navigation@3"
        },
        {
          "command": "template.views.local.refresh",
          "when": "view =~ /^template\\.views\\.local:/",
          "group": "navigation@3"
        },
        {
          "command": "template.views.local.load",
          "when": "view =~ /^template\\.views\\.local:/",
          "group": "navigation@2"
        },
        {
          "command": "template.loadTemplate",
          "when": "view == localTemplateExplorer",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "template.editTemplate",
          "when": "view == templateExplorer && viewItem == template || view == localTemplateExplorer && viewItem == template",
          "group": "inline"
        },
        {
          "command": "template.addFavorite",
          "when": "view == templateExplorer && viewItem == template || view == localTemplateExplorer && viewItem == template",
          "group": "inline"
        },
        {
          "command": "template.removeFavorite",
          "when": "view == mineTemplateExplorer",
          "group": "inline"
        }
      ]
    },
    "configuration": [
      {
        "title": "Template",
        "properties": {
          "template.workspaceFolder": {
            "type": "string",
            "scope": "application",
            "description": "The path of the workspace folder to store the template files.",
            "default": ""
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/request": "^2.48.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "mkdirp": "^0.5.1",
    "request": "^2.88.0"
  }
}
