{
  "name": "tcli",
  "displayName": "TCli",
  "description": "template cli",
  "version": "0.0.8",
  "icon": "images/tcli.png",
  "engines": {
    "vscode": "^1.35.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.add",
	"onCommand:extension.remove",
	"onCommand:extension.insert",
    "onCommand:extension.version"
  ],
  "main": "./src/extension.js",
  "publisher": "sillyY",
  "repository": "https://github.com/sillyY/TemplateCLI-Extension.git",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Tcli configuration",
      "properties": {
        "tcli.template": {
          "type": "object",
          "default": {
            "react": {
              "root": "",
              "type": ".js",
              "mark": "App"
            },
            "vue": {
              "root": "",
              "type": ".vue",
              "mark": "App"
            }
          },
          "description": "Set template"
		},
		"tcli.snippets": {
			"type":"object",
			"default": {
				"reset": "/Users/sillyy/学习/tcli模板/reset.css"
			}
		}
      }
    },
    "commands": [
      {
        "command": "extension.add",
        "title": "add",
        "category": "Tcli"
      },
      {
        "command": "extension.remove",
        "title": "remove",
        "category": "Tcli"
      },
      {
        "command": "extension.insert",
        "title": "insert",
        "category": "Tcli"
      },
      {
        "command": "extension.version",
        "title": "version",
        "category": "Tcli"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "eslint": "^5.13.0",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  }
}
