{
	"name": "tcli",
	"displayName": "TCli",
	"description": "template cli",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.createReact"
	],
	"main": "./src/extension.js",
	"contributes": {
		"configuration": {
            "type": "object",
            "title": "TCli configuration",
            "properties": {
                "tcli.react": {
                    "type": "string",
                    "default": "",
                    "description": "Set React template"
                },
                "tcli.vue": {
                    "type": "string",
                    "default": "",
                    "description": "Set Vue template"
                }
            }
        },
		"commands": [
			{
				"command": "extension.createReact",
				"title": "createReact",
				"category": "TCli"
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"eslint": "^5.13.0",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	}
}
